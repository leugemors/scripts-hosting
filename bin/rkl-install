#!/usr/bin/env bash
#############################################################################
##         _    _
##    _ __| | _| |
##   | '__| |/ / |   Richard Klein Leugemors
##   | |  |   <| |   https://www.github.com/leugemors/
##   |_|  |_|\_\_|
##
##   script to setup an mint/popos gnu/linux system
##
#############################################################################

set -eo pipefail

# ---------------------------------------------------------------------------
#  print a simple header
# ---------------------------------------------------------------------------

printHeader()
{
    printf "\nInstall Tool\n============"
    printf "\nSetup an Mint or Pop! OS GNU/Linux system for my personal use.\n"
}

# ---------------------------------------------------------------------------
#  show some help
# ---------------------------------------------------------------------------

showHelp()
{
cat << __EOT

Usage:
  $0 [OPTIONS]...

Valid options are:
  -h   Show this help screen
  -1   OpenJDK Java 11 (LTS)
  -7   OpenJDK Java 17 (LTS)
  -d   Developper tools
  -f   Some fun stuff
  -k   Virtualization with KVM/QEMU
  -m   Media stuff to play everything
  -n   Network and security tools
  -p   Python with various libs
  -s   Some suckless tools
  -t   Various handy tools
  -x   Extra packages for X11
  -z   Archive (zip) tools
  -a   All of the above (only Java 17)

__EOT
exit 1
}

# ---------------------------------------------------------------------------
#  check if we are root
# ---------------------------------------------------------------------------

checkRoot()
{
    if [ "${UID}" != 0 ]; then
        printf "\nERROR : You need to be root to run this script!\n\n"
        exit 1
    fi
}

# ---------------------------------------------------------------------------
#  initializations
# ---------------------------------------------------------------------------

initializations()
{
    aptget=$(command -v apt-get)
    install="${aptget} -y install"

    # java runtime environment
    java1="openjdk-11-jre openjdk-11-jdk"
    java7="openjdk-17-jre openjdk-17-jdk"

    # packages for developping
    develop="ansible automake build-essential bison curl exuberant-ctags flex \
        gawk git gitk git-gui jq libaio1 libtool maven meld ml-yacc shellcheck"

    # some fun stuff
    fun="ascii bb bsdgames cool-retro-term cowsay espeak fbi feh figlet fortune \
        hollywood linuxlogo lolcat neofetch pi sl sysvbanner"

    # virtualization with kvm/qemu
    kvm="qemu-kvm libvirt-daemon-system virtinst bridge-utils libosinfo-bin \
        virt-manager"

    # media play everything
    media="ubuntu-restricted-extras ffmpeg icedax libdvd-pkg easytag id3tool \
        lame libxine2-ffmpeg mpg321 libavcodec-extra gstreamer1.0-libav"

    # network and security tools
    nettools="chkrootkit cifs-utils davfs2 iftop iotop nfs-common nmap \
        openssh-server traceroute unhide whois"

    # python3
    python="python3.10 python3-pip python3-autopep8 python3-setuptools \
        python3-wheel"

    # some suckless tools
    suckless="alacritty bat colordiff duf entr exa fzf plocate ripgrep tldr zoxide"

    # various handy tools
    tools="apcalc c3270 calc dbview gcal gddrescue hardinfo hexedit htop kitty
        lnav lynx mc ncdu newsboat odt2txt rename plocate sshpass tasksel \
        terminator tidy tmux tnef tofrodos vim vim-scripts wipe tree weechat \
        zsh zsh-autosuggestions zsh-syntax-highlighting"

    # stuff for x
    xtools="bleachbit cheese flameshot gnome-tweaks gnote gparted gufw keepassxc \
        p7zip p7zip-rar pinta remmina vlc vokoscreen wireshark x3270 \
        xfonts-x3270-misc"

    # archive (zip) tools
    zip="arc arj cabextract lzop nomarch pax rar sharutils unrar unzip zip"

    # everything (only java17 LTS)
    all="${java7} ${develop} ${fun} ${kvm} ${media} ${nettools} ${python} \
        ${suckless} ${tools} ${xtools} ${zip}"
}

# ---------------------------------------------------------------------------
#  install all available updates
# ---------------------------------------------------------------------------

installUpdates()
{
    ${aptget} update
    ${aptget} -y dist-upgrade
    ${aptget} -y autoremove
    ${aptget} autoclean
}

# ---------------------------------------------------------------------------
#  install packages
# ---------------------------------------------------------------------------

installPackages()
{
    for package in ${packages}; do
        ${install} "${package}"
    done
}

#############################################################################
##
##  main program
##
#############################################################################

printHeader
checkRoot
initializations

if [[ -z "$1" ]]; then
    showHelp
fi

while getopts "h17dfkmnpstxza" option; do

    case "${option}" in
        h) showHelp ;;
        1) packages=${java1} ;;
        7) packages=${java7} ;;
        d) packages=${develop} ;;
        f) packages=${fun} ;;
        k) packages=${kvm} ;;
        m) packages=${media} ;;
        n) packages=${nettools} ;;
        p) packages=${python} ;;
        s) packages=${suckless} ;;
        t) packages=${tools} ;;
        x) packages=${xtools} ;;
        z) packages=${zip} ;;
        a) packages=${all} ;;
        *) exit 1 ;;
    esac

    printf "\n"

    installUpdates
    installPackages

done

printf "\nAll done!\n\n"

exit 0

### eof #####################################################################
