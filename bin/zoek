#!/bin/bash
#############################################################################
##
##  tool to easily search for packages
##
#############################################################################

if [ "$1" = "" ]; then
  echo "Usage: $0 package_name"
else
  echo -e "\nZOEKRESULTATEN\n=============="
  apt-cache search $1 | grep -i $1 | sort
  echo ""
fi

### EOF #####################################################################
