#!/usr/bin/env bash
#############################################################################
##
##  show free disk space on all mounted file systems
##
#############################################################################

echo
echo "--------------------------------------------------------"
echo "Filesystem      Size  Used Avail Use% Mounted on"
echo "--------------------------------------------------------"
#df -hlt ext4 | sort
df -h -l | grep "\/dev\/" | grep -v "tmpfs" | sort
echo "--------------------------------------------------------"
df -h -l --total | grep total
echo "--------------------------------------------------------"
echo

### EOF #####################################################################
