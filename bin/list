#!/usr/bin/env bash
#############################################################################
##
##  list installed packages
##
#############################################################################

if [ "$1" = "" ]
then
  echo "Usage: $0 package_name"
else
  echo -e "\nZOEKRESULTATEN\n=============="
  dpkg -l | grep $1 | sort
  echo ""
fi

### eof #####################################################################
